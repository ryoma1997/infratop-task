<h1>Editing Book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :newbook %>
  
  <h4>Body</h4>
  <%= f.text_area :detail %>
  <br>
  <a class="updateform"><%= f.submit 'Update Book' %></a>
  <br>
  <span>
    <%= link_to "Show", book_path(@book.id) %>
    <a>
        |
    </a>
    <%= link_to "Back", "/books" %>
</span>
  
<% end %>